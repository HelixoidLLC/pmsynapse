{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "fs:default",
    "shell:default",
    "shell:allow-open",
    "clipboard-manager:default",
    "notification:default",
    "log:default",
    "store:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$HOME/.pmsynapse/**",
        "./**"
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "snps",
          "cmd": "snps",
          "args": true
        }
      ]
    }
  ]
}

#!/bin/bash
# Pre-push hook for PMSynapse
# Installed by: make githooks
# Runs checks and engine tests before allowing push

set -e

echo "ğŸ” Running pre-push checks..."

# Run format check
echo "  â–¶ Checking formatting..."
if ! cargo fmt --all -- --check > /dev/null 2>&1; then
    echo "âŒ Formatting issues found. Run 'cargo fmt' to fix."
    exit 1
fi
echo "  âœ“ Formatting OK"

# Run clippy on engine crates (no GTK dependencies)
echo "  â–¶ Running clippy (engine)..."
if ! cargo clippy -p snps-core -p snps-cli --all-targets -- -D warnings 2>&1 | tail -5; then
    echo "âŒ Clippy found issues. Fix warnings before pushing."
    exit 1
fi
echo "  âœ“ Clippy OK"

# Run engine tests
echo "  â–¶ Running tests (engine)..."
if ! cargo test -p snps-core -p snps-cli --all-features 2>&1 | tail -10; then
    echo "âŒ Tests failed. Fix failing tests before pushing."
    exit 1
fi
echo "  âœ“ Tests OK"

echo ""
echo "âœ… All pre-push checks passed!"
